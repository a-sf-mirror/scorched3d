	<window>
		<name>Channels</name>
		<state>all</state>
		<state>start</state>
		<visible>true</visible>
		<key></key>
		<windowlevel>200000</windowlevel>
		<w>-400</w>
		<h>100</h>
		<x>200</x>
		<y>25</y>
		<windowstate>805</windowstate>
		<tooltiptransparent>true</tooltiptransparent>
		<notooltip>true</notooltip>
		<description>Shows channel messages</description>
		<items>
			<item>
				<widget type="GLWChannelText">
					<x>0</x><y>0</y>
					<w>0</w><h>0</h>
					<displaytime>15.0</displaytime>
					<totallines>50</totallines>
					<visiblelines>5</visiblelines>
					<linedepth>18</linedepth>
					<fontsize>12</fontsize>
					<outlinefontsize>14</outlinefontsize>
					<textaligntop>false</textaligntop>
					<splitlargelines>true</splitlargelines>
					<parentsized>true</parentsized>
					<tooltiptransparent>true</tooltiptransparent>
					<showchannelname>false</showchannelname>
					<showchannelnumber>true</showchannelnumber>
					<allowscroll>true</allowscroll>
					<scrollupkey>LOG_SCROLL_UP</scrollupkey>
					<scrolldownkey>LOG_SCROLL_DOWN</scrolldownkey>
					<scrollresetkey>LOG_SCROLL_RESET</scrollresetkey>
					<talkkey>
						<key>SHOW_GENERAL_CHANNEL_DIALOG</key>
						<channel>general</channel>
					</talkkey>
					<talkkey>
						<key>SHOW_TEAM_CHANNEL_DIALOG</key>
						<channel>team</channel>
					</talkkey>
					<talkkey>
						<key>SHOW_CHANNEL_DIALOG</key>
						<channel></channel>
					</talkkey>
					<textsound>data/wav/misc/text.wav</textsound>
